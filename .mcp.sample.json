{
  "mcpServers": {
    "neo4j-cw-manager": {
      "type": "stdio",
      "command": "uvx",
      "args": [
        "--refresh",
        "--from",
        "git+https://github.com/KoichiMatsudaMPL/neo4j-cw-manager@develop",
        "neo4j-cw-manager"
      ],
      "env": {
        "PROJECT": "PROJECT_NAME",
        "NEO4J_URI": "bolt://localhost:7687",
        "NEO4J_USER": "neo4j",
        "NEO4J_PASSWORD": "YOUR PASSWORD",
        "NEO4J_DATABASE": "neo4j",
        "WORKSPACE": "/path/to/your/workspace"
      }
    }
  }
}